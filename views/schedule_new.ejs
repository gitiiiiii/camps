<!doctype html>
<html><head><meta charset="utf-8"><title>New Schedule</title><link rel="stylesheet" href="/css/styles.css"></head><body>
  <%- include('partials/header') %>
  <div class="container">
    <h2>Create Schedule</h2>
    <form method="post" action="/schedules">
      <div class="form-row"><label>Route</label>
        <select name="route">
          <% routes.forEach(function(r){ %>
            <option value="<%= r._id %>"><%= r.title %></option>
          <% }) %>
        </select>
      </div>
      <div class="form-row"><label>Day</label><input name="day" placeholder="Mon-Fri" /></div>
      <div class="form-row"><label>Departure Time</label><input name="departureTime" /></div>
      <div class="form-row"><label>Arrival Time</label><input name="arrivalTime" /></div>
      <button class="btn" type="submit">Create</button>
    </form>
  </div>
</body></html>
